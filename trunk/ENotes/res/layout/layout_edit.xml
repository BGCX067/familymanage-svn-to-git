<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/linearlayout_edit"
    android:background="@drawable/back"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativelayout_title_text"
    android:orientation="horizontal"
    android:background="#ff0000"
    >
    	<LinearLayout
    	android:layout_height="fill_parent"
    	android:layout_width="wrap_content"
    	android:gravity="center_vertical"
    	android:layout_weight="1"
    	android:orientation="horizontal">
    	<ImageView
    	android:layout_width="25dp"
    	android:layout_height="25dp"
    	android:layout_marginLeft="2dp"
    	android:src="@drawable/color"
    	android:id="@+id/textview_select_back">
    	</ImageView>
    	<TextView
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent"
    	android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp"
    	android:shadowRadius="2"
		android:shadowDx="2"
	    android:shadowDy="2"
	    android:shadowColor="#572307"
		android:textColor="@drawable/text_back"
		android:textStyle="bold"
    	android:gravity="center"
    	android:layout_weight="1"
    	android:singleLine="true"
    	android:ellipsize="middle"
    	android:id="@+id/textview_select_folder">
    	</TextView>
    	</LinearLayout>
    	<LinearLayout
    	android:orientation="vertical"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingRight="2dp"
    	android:gravity="center">
	    	<TextView
	    	android:layout_height="20dp"
	    	android:layout_width="wrap_content"
	    	android:textColor="#000000"
	    	android:id="@+id/textview_modify_time">
	    	</TextView>
	    	<TextView
	    	android:layout_height="20dp"
	    	android:layout_width="wrap_content"
	    	android:drawableLeft="@drawable/alarm_s"
	    	android:gravity="center"
	    	android:textColor="#000000"
	    	android:id="@+id/textview_alarm">
	    	</TextView>
    	</LinearLayout>
    </LinearLayout>
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="#ffffff"
    >
    <EditText
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|left"
    android:id="@+id/edittext_detail"
    android:scrollbars="vertical"
    >
    </EditText>
    </LinearLayout>
</LinearLayout>
