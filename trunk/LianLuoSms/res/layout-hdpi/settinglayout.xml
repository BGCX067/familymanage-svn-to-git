<?xml version="1.0" encoding="utf-8"?>
<SkinLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/bg"
	android:orientation="vertical">
	<SkinRelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="46dip"
		android:id="@+id/rl_title"
		android:background="@drawable/top">
		<SkinTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/title"
			android:id="@+id/tv_appname"
			android:text="@string/setting"
			android:layout_centerInParent="true"
			style="@style/StyleText" />
	</SkinRelativeLayout>

	<!-- 1、消息栏提醒开关 2、动画短信提醒开关 3、短信震动提醒开关 4、快捷短信提醒开关 5、资源库 6、检查更新7、分享 -->

	<!-- 消息栏提醒开关 -->
	<SkinRelativeLayout
		android:orientation="horizontal"
		android:id="@+id/rl_setting1"
		android:layout_marginTop="10dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<SkinTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/message"
			android:text="@string/setting1"
			android:layout_centerVertical="true"
			android:textColor="@color/t_body"
			android:layout_marginLeft="10dip" />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/bt_1"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"
			android:background="@drawable/on" />
	</SkinRelativeLayout>

	<!-- 动画短信提醒开关 -->
	<SkinRelativeLayout
		android:orientation="horizontal"
		android:id="@+id/rl_setting2"
		android:layout_marginTop="10dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:visibility="gone">
		<SkinTextView
			android:layout_width="wrap_content"
			android:text="@string/setting2"
			android:layout_height="wrap_content"
			android:id="@+id/flash"
			android:textColor="@color/t_body"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dip" />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/bt_2"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"
			android:background="@drawable/on" />
	</SkinRelativeLayout>

	<!-- 短信震动提醒开关 -->
	<SkinRelativeLayout
		android:orientation="horizontal"
		android:id="@+id/rl_setting3"
		android:layout_marginTop="10dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:visibility="gone" >
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/bt_3"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"
			android:background="@drawable/on" />
		<SkinTextView
			android:layout_width="wrap_content"
			android:text="@string/setting3"
			android:layout_alignParentLeft="true"
			android:layout_height="wrap_content"
			android:id="@+id/sms"
			android:layout_toLeftOf="@id/bt_3"
			android:textColor="@color/t_body"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dip" />

	</SkinRelativeLayout>

	<!-- 快捷短信提醒开关 -->
	<SkinRelativeLayout
		android:orientation="horizontal"
		android:id="@+id/rl_setting4"
		android:layout_marginTop="10dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<SkinTextView
			android:layout_width="wrap_content"
			android:text="@string/setting4"
			android:layout_height="wrap_content"
			android:id="@+id/shortcut"
			android:textColor="@color/t_body"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dip" />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/bt_4"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"
			android:background="@drawable/on" />
	</SkinRelativeLayout>

	<!-- 账户管理 -->
	<SkinRelativeLayout
		android:orientation="horizontal"
		android:id="@+id/rl_setting8"
		android:layout_marginTop="20dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<SkinTextView
			android:layout_width="wrap_content"
			android:text="@string/account_manage"
			android:layout_height="wrap_content"
			android:id="@+id/account_manage"
			android:textColor="@color/t_body"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dip" />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/bt_5"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"
			android:visibility="gone" />
	</SkinRelativeLayout>


	<!-- 资源库 -->
	<!--
		<SkinRelativeLayout android:orientation="horizontal"
		android:id="@+id/rl_setting5" android:layout_marginTop="20dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"> <SkinTextView
		android:layout_width="wrap_content" android:text="@string/setting5"
		android:layout_height="wrap_content" android:id="@+id/ziyuanku"
		android:textColor="@color/defcolor"
		android:layout_centerVertical="true" android:layout_marginLeft="10dip"
		/> <Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/bt_5"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="10dip" android:visibility="gone"/>
		</SkinRelativeLayout>
	-->


	<!-- 检查更新-->
	<SkinRelativeLayout
		android:orientation="horizontal"
		android:id="@+id/rl_setting6"
		android:layout_marginTop="50dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<SkinTextView
			android:layout_width="wrap_content"
			android:text="@string/setting6"
			android:layout_height="wrap_content"
			android:id="@+id/updata"
			android:textColor="@color/t_body"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dip" />
		<SkinButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/bt_6"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"
			android:visibility="gone" />
	</SkinRelativeLayout>

	<!-- 分享-->
	<SkinRelativeLayout
		android:orientation="horizontal"
		android:id="@+id/rl_setting7"
		android:layout_marginTop="20dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<SkinTextView
			android:layout_width="wrap_content"
			android:text="@string/setting7"
			android:layout_height="wrap_content"
			android:id="@+id/share"
			android:textColor="@color/t_body"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dip" />
		<SkinButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/bt_7"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"
			android:visibility="gone" />
	</SkinRelativeLayout>

	<!-- 关于 -->
	<SkinRelativeLayout
		android:orientation="horizontal"
		android:id="@+id/rl_setting9"
		android:layout_marginTop="20dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<SkinTextView
			android:layout_width="wrap_content"
			android:text="@string/about"
			android:layout_height="wrap_content"
			android:id="@+id/about"
			android:textColor="@color/t_body"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dip" />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/bt_5"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"
			android:visibility="gone" />
	</SkinRelativeLayout>

	<!-- 我说两句 -->
	<SkinRelativeLayout
		android:orientation="horizontal"
		android:id="@+id/rl_setting10"
		android:layout_marginTop="20dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<SkinTextView
			android:layout_width="wrap_content"
			android:text="@string/imtalk"
			android:layout_height="wrap_content"
			android:id="@+id/imtalk"
			android:textColor="@color/t_body"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dip" />
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/bt_5"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"
			android:visibility="gone" />
	</SkinRelativeLayout>


</SkinLinearLayout>
