<?xml version="1.0" encoding="utf-8"?>
<SkinLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/bg"
	>
	<include
        android:id="@+id/top"
        layout="@layout/res_title" />
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:paddingLeft="30dp"
	    android:paddingRight="30dp"
	    >
	    <TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:text="@string/verifyr_message"
	    android:textColor="#8f8f8f"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:id="@+id/textview_verify_mes"
	    >
		</TextView>
		<LinearLayout
		    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:background="@drawable/verify_edit"
		    android:gravity="center_vertical"
		    >
			<EditText
			    android:layout_width="1dp"
			    android:layout_height="wrap_content"
			    android:id="@+id/edit_verifya"
			    android:gravity="center"
			    android:inputType="phone"
			    android:layout_weight="1"
				android:maxLength="1"
				android:background="#00000000"
				android:nextFocusRight="@+id/edit_verifyb"
			    >
			    </EditText>
			    <EditText
			     android:layout_width="1dp"
			    android:layout_height="wrap_content"
			    android:id="@+id/edit_verifyb"
			    android:gravity="center"
			    android:inputType="phone"
				android:layout_weight="1"
				android:maxLength="1"
				android:background="#00000000"
				android:nextFocusRight="@+id/edit_verifyc"
			    >
			    </EditText>
			    <EditText
			     android:layout_width="1dp"
			    android:layout_height="wrap_content"
			    android:id="@+id/edit_verifyc"
			    android:gravity="center"
			    android:inputType="phone"
				android:layout_weight="1"
				android:maxLength="1"
				android:background="#00000000"
				android:nextFocusRight="@+id/edit_verifyd"
			    >
			    </EditText>
			    <EditText
			     android:layout_width="1dp"
			    android:layout_height="wrap_content"
			    android:id="@+id/edit_verifyd"
			    android:gravity="center"
			    android:background="#00000000"
			    android:inputType="phone"
				android:layout_weight="1"
				android:maxLength="1"
			    >
			    </EditText>
	    </LinearLayout>
	    <LinearLayout
	        android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/linearlayout_pw"
	        android:visibility="gone"
	        >
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/password"
			        android:textColor="#888888"
			        android:layout_marginTop="3dp"
			        >
			        </TextView>  
				<EditText
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/edit_input"
				    android:id="@+id/edit_passws"
				    android:maxLength="20"
			        android:singleLine="true"
			        android:inputType="textPassword"
			        android:paddingLeft="3dp"
				    >  
				    </EditText>
			    <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/confirm_pw"
			        android:textColor="#888888"
			        android:layout_marginTop="3dp"
			        >
			        </TextView>  
				<EditText
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/edit_input"
				    android:id="@+id/edit_confirm_pw"
				    android:maxLength="20"
			        android:singleLine="true"
			        android:inputType="textPassword"
			        android:paddingLeft="3dp"
				    >  
				    </EditText>
		</LinearLayout>
	</LinearLayout>
	<Button
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:text="@string/ensure"
	    android:layout_gravity="center_horizontal"
	    android:id="@+id/button_verify"
	    android:background="@drawable/confirm_wide"
	    >
	    </Button>   
	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:textColor="#888888"
	    android:gravity="center"
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp"
	    android:text="@string/verify_info"
	    >
	    </TextView>     
</SkinLinearLayout>  