<?xml version="1.0" encoding="utf-8"?>
<SkinRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="fill_parent"
    android:layout_height="46dip"
    android:background="@drawable/top" >

    <SkinButton
        android:id="@+id/bt_shortcut_key"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/bt_shortcut_key_xml"
        android:textColor="@color/defcolor" />

    <SkinButton
        android:id="@+id/changeReadSmsWayButton"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/bt_shortcut_key"
        android:background="@drawable/bt_call_xml"
        android:textColor="@color/defcolor" />

    <SkinImageView
        android:id="@+id/iv_head"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip" />

    <SkinTextView
        android:id="@+id/tv_name"
        style="@style/StyleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/bt_call"
        android:layout_toRightOf="@id/iv_head"
        android:ellipsize="end"
        android:maxEms="4"
        android:singleLine="true"
        android:textColor="@color/title" />

    <SkinTextView
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/title" />

</SkinRelativeLayout>