<?xml version="1.0" encoding="utf-8"?>
<SkinRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:background="@drawable/threadlayout_list"
	android:layout_height="fill_parent">
	<SkinImageView android:layout_width="45dip"
		android:layout_height="45dip" android:id="@+id/iv_thread_head"
		android:background="@drawable/def_head" android:layout_centerVertical="true"
		android:layout_alignParentLeft="true" android:layout_marginLeft="5dip" />
	
	<CheckBox android:id="@+id/box" android:layout_marginRight="5dip" style="@style/MyCheckBox"
		android:layout_centerVertical="true" android:layout_alignParentRight="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		 />
		
	<SkinTextView  android:id="@+id/text1" android:textSize="15sp" android:layout_marginTop="10dip"
		 android:layout_width="fill_parent" android:textColor="@color/t_body"
		android:layout_height="wrap_content" android:layout_toRightOf="@id/iv_thread_head"
		android:layout_toLeftOf="@id/box" android:layout_marginRight="10dip"
		android:ellipsize="end"
        android:singleLine="true"
		android:layout_marginLeft="15dip" />
	<SkinTextView android:id="@+id/text2"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="15dip" 
		android:layout_marginRight="10dip"
		android:layout_below="@id/text1"
		android:layout_toRightOf="@id/iv_thread_head"
		android:layout_toLeftOf="@id/box"
		android:ellipsize="end"
        android:singleLine="true"
		android:textSize="12sp" android:textColor="@color/t_body" />
</SkinRelativeLayout>

 