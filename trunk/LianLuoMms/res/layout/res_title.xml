<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="fill_parent"
    android:layout_height="46dip"
    android:layout_alignParentTop="true"
    android:background="@drawable/top"
    android:gravity="center_vertical" >
    
    <ImageView
        android:id="@+id/res_title_icon"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:src="@drawable/res_back" />

    <TextView
        android:id="@+id/res_title_text"
        style="@style/StyleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/res_lib_new"
        android:layout_toRightOf="@+id/res_title_icon"
        android:textColor="@color/title" />

    <ImageView
        android:id="@+id/res_title_button"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/my_res_touch"
        android:visibility="gone" />
	<ImageView
        android:id="@+id/res_title_save"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/account_save"
        android:visibility="gone" />
</RelativeLayout>